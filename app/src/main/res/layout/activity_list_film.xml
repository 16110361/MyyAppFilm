<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    tools:context="com.murniandhany.myappfilm.ListFilmActivity">

    <RelativeLayout
        android:layout_width="358dp"
        android:layout_height="250dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="100dp">

        <ImageView
            android:id="@+id/img_movie"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_above="@+id/btn_detail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title Movie"
            android:textColor="@color/circle_new_film"
            android:textSize="15dp"
            android:layout_alignTop="@+id/img_movie"
            android:layout_alignLeft="@+id/btn_detail"
            android:layout_alignStart="@+id/btn_detail" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_title"
            android:layout_alignRight="@+id/tv_title"
            android:layout_alignTop="@+id/img_movie"
            android:layout_marginTop="29dp"
            android:text="Description" />
        `

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:text="Release Date"
            android:layout_above="@+id/btn_detail"
            android:layout_alignLeft="@+id/btn_detail"
            android:layout_alignStart="@+id/btn_detail" />

        <Button
            android:id="@+id/btn_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/circle_list"
            android:text="Detail"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
