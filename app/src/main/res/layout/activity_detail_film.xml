<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    tools:context="com.murniandhany.myappfilm.DetailFilmActivity">


    <LinearLayout
        android:layout_width="358dp"
        android:layout_height="250dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="82dp"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_detail"
            android:layout_alignStart="@+id/btn_detail"
            android:layout_alignTop="@+id/img_movie"
            android:text="Title Movie"
            android:textColor="@color/circle_new_film"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_title"
            android:layout_alignRight="@+id/tv_title"
            android:layout_alignTop="@+id/img_movie"
            android:layout_marginTop="29dp"
            android:text="Description"
            android:layout_weight="0.09" />
        `

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="75dp"
            android:layout_marginStart="75dp"
            android:layout_toEndOf="@+id/tv_description"
            android:layout_toRightOf="@+id/tv_description"
            android:background="@color/circle_list"
            android:text="Back"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
